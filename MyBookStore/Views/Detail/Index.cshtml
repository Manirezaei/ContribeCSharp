@using MyBookStore.Models
@model tblBook
@{
    ViewBag.Title = "Index";
}

@* display detail of book *@

@foreach (var item in ViewBag.data)
{
            <div id="templatemo_content_right">

                <h1>@item.Title <span>(by @item.Author)</span></h1>
                <div class="image_panel"><img src="@Url.Content(item.Image)" alt="CSS Template" width="100" height="150" /></div>
                
                <div class="buy_now_button"><a href="@Url.Action("AddtoCartItem", "AddToCart", new {item.Id })">Add to Cart</a></div>
                
                <div class="cleaner_with_height">&nbsp;</div>

                <a href="index.html"><img src="images/templatemo_ads.jpg" alt="css template ad" /></a>

            </div> <!-- end of content right -->
}
            <div class="cleaner_with_height">&nbsp;</div>
       
        